{% extends 'base.html.twig' %}

{% block title %}Update book in Library form{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Update Book</h1>
    <form action="{{ path('book_update', {'idnumber': book.id, 'isbn': book.isbn}) }}" method="post">
        <input type="hidden" name="idnumber" value="{{ book.id }}">
        <input type="hidden" name="isbn" value="{{ book.isbn }}">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{ book.title }}"><br><br>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="{{ book.author }}"><br><br>

        <label for="isbn">ISBN:</label>
        <input type="number" id="isbn" name="isbn" value="{{ book.isbn }}"><br><br>

        <label for="img">Image:</label>
        <input type="text" id="img" name="img" value="{{ book.img }}"><br><br>

        <button type="submit">Update</button>
    </form>
</div>
{% endblock %}

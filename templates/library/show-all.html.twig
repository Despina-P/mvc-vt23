{% extends 'base.html.twig' %}

{% block title %}Show all books{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for book in books %}
        <p><a href="{{ path('book_by_id', {'idnumber': book.id}) }}">{{ book.title }}</a></p>

        <form action="{{ path('book_update_form') }}" method="GET">
            <input type="hidden" name="idnumber" value="{{ book.id }}">
            <input type="hidden" name="isbn" value="{{ book.isbn }}">
            <button type="submit">Update</button>
        </form>

        <form action="{{ path('book_delete_by_id', {'idnumber': book.id}) }}" method="POST">
            <input type="hidden" name="idnumber" value="{{ book.id }}">
            <input type="hidden" name="isbn" value="{{ book.isbn }}">
            <button type="submit">Delete</button>
        </form>

        <p>---------------------------------------------------------------------------</p>
    {% endfor %}
</div>
{% endblock %}

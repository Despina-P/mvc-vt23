<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <a href="{{ asset('img/background.jpg') }}">
                <img src="{{ asset('img/background.jpg') }}" width="400px" height="200px" alt="">
            </a>
        </header>

        <nav>
            <a href="{{ path('me') }}">ME</a> |
            <a href="{{ path('about') }}">ABOUT</a> |
            <a href="{{ path('report') }}">REPORT</a> |
            <a href="{{ path('lucky_number') }}">RANDOM</a> |
            <a href="{{ path('quote') }}">QUOTE</a> |
            <a href="{{ path('card') }}">CARD</a> |
            <a href="{{ path('api')}}">ROUTES</a> |
            <a href="{{ path('game_start')}}">21</a> |
            <a href="{{ path('app_library')}}">Library</a>
        </nav>

        <main>{% block body %}{% endblock %}</main>

        <footer>{% block footer %}Akronym: depl22 Kurs: mvc{% endblock %}</footer>
    </body>
</html>
